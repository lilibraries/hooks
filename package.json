{
  "name": "@lilib/hooks",
  "version": "0.2.1",
  "description": "React hook library",
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "李蔚生",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lilibraries/hooks.git"
  },
  "bugs": {
    "url": "https://github.com/lilibraries/hooks/issues"
  },
  "homepage": "https://lilibraries.github.io/hooks/",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "src",
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "scripts": {
    "prepare": "husky install",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "test": "jest",
    "test:16": "npm i --no-save --legacy-peer-deps react@16 react-dom@16 @testing-library/react@12 @testing-library/react-hooks@7 && jest",
    "test:17": "npm i --no-save --legacy-peer-deps react@17 react-dom@17 @testing-library/react@12 @testing-library/react-hooks@7 && jest",
    "test:18": "npm i --no-save --legacy-peer-deps react@18 react-dom@18 @testing-library/react@13 && jest",
    "test:all": "npm run test:16 && npm run test:17 && npm run test:18 && npm install",
    "lint": "tsc -p tsconfig.json --noEmit && eslint . --ext .jsx,.js,.ts,.tsx && prettier --check . --loglevel warn",
    "lint:fix": "tsc -p tsconfig.json --noEmit && eslint . --ext .jsx,.js,.ts,.tsx --fix && prettier --write . --loglevel warn",
    "dist": "rimraf dist && concurrently --kill-others-on-fail npm:dist:*",
    "dist:cjs": "babel src --out-dir dist/cjs --config-file ./babel.cjs.json --extensions .ts,.tsx --no-babelrc",
    "dist:esm": "babel src --out-dir dist/esm --config-file ./babel.esm.json --extensions .ts,.tsx --no-babelrc",
    "dist:umd": "cross-env NODE_ENV=development rollup --config && cross-env NODE_ENV=production rollup --config",
    "dist:types": "tsc -p ./tsconfig.build.json",
    "gh-pages": "npm run build && gh-pages -d build",
    "release": "npm run lint && npm run test:all && npm run dist && npm run build && standard-version -n -i docs/CHANGELOG.md && npm publish"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.18.3",
    "@types/js-cookie": "^3.0.2",
    "@types/lodash": "^4.14.190",
    "@types/raf": "^3.4.0",
    "@types/use-sync-external-store": "^0.0.3",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "raf": "^3.4.1",
    "requestidlecallback": "^0.3.0",
    "resize-observer-polyfill": "^1.5.1",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/plugin-transform-runtime": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@docusaurus/core": "^2.1.0",
    "@docusaurus/preset-classic": "^2.1.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.1",
    "@sinonjs/fake-timers": "^9.1.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@tweenjs/tween.js": "^18.6.4",
    "@types/jest": "^28.1.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "concurrently": "^7.2.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "docusaurus-plugin-module-alias": "^0.0.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.4.7",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "raw-loader": "^4.0.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-license": "^2.8.1",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "tsc-files": "^1.1.3",
    "typescript": "^4.7.3"
  }
}
